{
  "devDependencies": {
    "@tailwindcss/jit": "^0.1.3",
    "autoprefixer": "^10.2.5",
    "postcss": "^8.2.8",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.0.4"
  },
  "scripts": {
    "css": "postcss app/assets/stylesheets/tailwind.css -o app/assets/stylesheets/application.css --verbose",
    "css:watch": "TAILWIND_MODE=watch npm run css -- --watch",
    "css:build": "NODE_ENV=production npm run css"
  }
}
